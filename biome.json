{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "indentStyle": "space",
    "include": ["src/**", "public/**"]
  },
  "linter": {
    "enabled": true,
    "include": ["src/**", "public/**"]
  },
  "organizeImports": {
    "enabled": false
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "lineWidth": 100,
      "quoteStyle": "single",
      "bracketSpacing": false,
      "arrowParentheses": "asNeeded"
    }
  }
}
